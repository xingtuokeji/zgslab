<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.simtop.dao.CourseDao">
    <insert id="insert" parameterType="com.simtop.pojo.Course">
        insert into tb_course(course_name, create_time, update_time)
        values (#{courseName},now(),now())
    </insert>
    <delete id="deleteById" parameterType="int">
        delete from
        where id=#{id}tb_course
    </delete>
    <update id="update" parameterType="com.simtop.pojo.Course">
        update tb_course set course_name=#{courseName},update_time=now
        where id=#{id}
    </update>
    <select id="findById" parameterType="int" resultType="com.simtop.pojo.Course">
        select id,course_name,create_time,update_time
        from tb_course
        where id=#{id}
    </select>
    <select id="selectAll" resultType="com.simtop.pojo.Course">
        select id,course_name,create_time,update_time
        from tb_course
    </select>
</mapper>    
  