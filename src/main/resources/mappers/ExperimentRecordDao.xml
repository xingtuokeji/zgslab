<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.simtop.dao.ExperimentRecordDao">
    <select id="findById" parameterType="int" resultType="com.simtop.pojo.ExperimentRecord">
        select id,username,school,course_name,experiment_name,create_time,time,score,update_time
        from tb_experiment_record where id=#{id}
    </select>

    <insert id="insert" parameterType="com.simtop.pojo.ExperimentRecord">
        insert into tb_experiment_record (username, school, course_name, experiment_name, create_time, score,time,update_time)
        values (#{username},#{school},#{courseName},#{experimentName},now(),#{score},#{time},now())
    </insert>

    <select id="selectAll" resultType="com.simtop.pojo.ExperimentRecord">
        select id,username, school, course_name, experiment_name, create_time, score,time,update_time
        from tb_experiment_record
    </select>

    <delete id="deleteById" parameterType="int">
        delete from tb_experiment_record
        where id=#{id}
    </delete>

    <select id="queryExpNum" resultType="int">
        select count(*) from tb_experiment_record
    </select>

    <select id="selectTotalExpTime" resultType="int">
        select sum(time) from tb_experiment_record;
    </select>

</mapper>    
  