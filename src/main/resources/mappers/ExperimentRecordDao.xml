<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.simtop.dao.ExperimentRecordDao">
    <resultMap id="result" type="com.simtop.pojo.ExperimentRecord">
        <id property="id" column="tr.id"/>
        <result property="username" column="username"/>
        <result property="school" column="school"/>
        <result property="experimentName" column="experiment_name"/>
        <result property="courseName" column="course_name"/>
        <association property="u3DExpRecord" column="id" javaType="com.simtop.pojo.U3DExpRecord">
            <id property="id" column="id"/>
            <result property="experimentId" column="experiment_id"/>
            <result property="totalScore" column="total_score"/>
            <result property="time" column="time"/>
        </association>
    </resultMap>

    <resultMap id="result1" type="com.simtop.pojo.ExperimentRecord">
        <id property="id" column="tr.id"/>
        <result property="username" column="username"/>
        <result property="school" column="school"/>
        <result property="experimentName" column="experiment_name"/>
        <result property="courseName" column="course_name"/>
        <association property="u3DReportToWeb" column="id" javaType="com.simtop.pojo.ExperimentResult">
            <id property="id" column="id"/>
            <result property="experimentId" column="experiment_id"/>
        </association>
    </resultMap>

    <select id="findById" parameterType="int" resultType="com.simtop.pojo.ExperimentRecord">
        select id,username,school,course_name,experiment_name,create_time,time,total_score,update_time
        from tb_experiment_record where id=#{id}
    </select>

    <insert id="insert" parameterType="com.simtop.pojo.ExperimentRecord" useGeneratedKeys="true" keyProperty="id">
        insert into tb_experiment_record (username, school, course_name, experiment_name, create_time, total_score,time,update_time,experiment_type,organization)
        values (#{username},#{school},#{courseName},#{experimentName},now(),NULL,NULL,now(),#{experimentType},#{organization})
    </insert>

    <insert id="insertDispersionExp" parameterType="com.simtop.pojo.ExperimentRecord" useGeneratedKeys="true" keyProperty="id">
        insert into tb_experiment_record(username, school, course_name,
        experiment_name, create_time, time, total_score, update_time, experiment_type, organization)
        values (#{username},#{school},NULL,NULL,now(),NULL,NULL,now(),#{experimentType},#{organization})
    </insert>

    <select id="selectAll" resultMap="result">
        select tr.id 'tr.id',tr.username, tr.school, tr.course_name, tr.experiment_name, tr.create_time,twr.total_score,twr.time,tr.update_time
        from tb_experiment_record tr left join tb_u3d_web_exp_record twr
        on tr.id=twr.experiment_id
    </select>

    <delete id="deleteById" parameterType="int">
        delete from tb_experiment_record
        where id=#{id}
    </delete>

    <select id="queryExpNum" resultType="int">
        select count(*) from tb_experiment_record
    </select>

    <select id="selectTotalExpTime" resultType="int">
        select sum(time) from tb_experiment_record;
    </select>

    <select id="selectByExperimentId" resultMap="result1">
        select tr.id 'tr.id',tr.username, tr.school, tr.course_name, tr.experiment_name, tr.create_time,tr.update_time
        from tb_experiment_record tr,tb_u3d_web_exp_result
        where tr.id=tb_u3d_web_exp_result.experiment_id
    </select>

</mapper>    
  